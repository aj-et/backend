<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<%- messages() %>

<h2>Welcome <%- locals.accountData.account_firstname %></h2>
<a href="/account/updateView/<%- locals.accountData.account_id %>">Update account information</a>

